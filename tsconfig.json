{
	"compilerOptions": {
		"target": "ESNEXT",
		"module": "CommonJS",
    	"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": ["dist"]
}
